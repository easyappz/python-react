[
  {
    "name": "Проверка загрузки данных при переходе на страницу отчетов",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/reports"
      },
      {
        "action": "wait",
        "delay": 500
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": ".report-content"
      }
    ]
  },
  {
    "name": "Переключение на отчет о прибылях и убытках",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/reports"
      },
      {
        "action": "wait",
        "delay": 1000
      },
      {
        "action": "click",
        "selector": "[data-testid='reports-tab-profit-loss']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": ".report-content"
      }
    ]
  },
  {
