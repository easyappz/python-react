[
  {
    "name": "Проверка отображения формы регистрации",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/register"
      }
    ],
    "assertions": [
      {
        "type": "url",
        "expectedUrl": "{domain}/register"
      },
      {
        "type": "visibility",
        "selector": "[data-testid='register-firstname-input']"
      },
      {
        "type": "visibility",
        "selector": "[data-testid='register-lastname-input']"
      },
      {
        "type": "visibility",
        "selector": "[data-testid='register-email-input']"
      },
      {
        "type": "visibility",
        "selector": "[data-testid='register-password-input']"
      },
      {
        "type": "visibility",
        "selector": "[data-testid='register-submit-button']"
      },
      {
        "type": "visibility",
        "selector": "[data-testid='register-login-link']"
      }
    ]
  },
  {
    "name": "Проверка валидации пустых полей",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/register"
      },
      {
        "action": "click",
        "selector": "[data-testid='register-submit-button']"
      },
      {
        "action": "wait",
        "delay": 500
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": "[data-testid='register-error-message']"
      }
    ]
  },
  {
    "name": "Проверка валидации короткого пароля",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/register"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-firstname-input']",
        "value": "John"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-lastname-input']",
        "value": "Doe"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-email-input']",
        "value": "john@example.com"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-password-input']",
        "value": "12345"
      },
      {
        "action": "click",
        "selector": "[data-testid='register-submit-button']"
      },
      {
        "action": "wait",
        "delay": 500
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": "[data-testid='register-error-message']"
      },
      {
        "type": "text",
        "selector": "[data-testid='register-error-message']",
        "expectedText": "Пароль должен содержать минимум 6 символов"
      }
    ]
  },
  {
    "name": "Проверка перехода на страницу входа",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/register"
      },
      {
        "action": "click",
        "selector": "[data-testid='register-login-link']"
      },
      {
        "action": "wait",
        "delay": 500
      }
    ],
    "assertions": [
      {
        "type": "url",
        "expectedUrl": "{domain}/login"
      }
    ]
  }
]
