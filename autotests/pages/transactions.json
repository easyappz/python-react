[
  {
    "name": "Добавление новой транзакции дохода",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/transactions"
      },
      {
        "action": "wait",
        "delay": 1000
      },
      {
        "action": "click",
        "selector": "[data-testid='add-transaction-btn']"
      },
      {
        "action": "wait",
        "delay": 500
      },
      {
        "action": "select",
        "selector": "[data-testid='transaction-form-type']",
        "value": "income"
      },
      {
        "action": "fill",
        "selector": "[data-testid='transaction-form-amount']",
        "value": "50000"
      },
      {
        "action": "fill",
        "selector": "[data-testid='transaction-form-date']",
        "value": "2024-01-15"
      },
      {
        "action": "select",
        "selector": "[data-testid='transaction-form-category']",
        "value": "1"
      },
      {
        "action": "fill",
        "selector": "[data-testid='transaction-form-description']",
        "value": "Тестовый доход"
      },
      {
        "action": "fill",
        "selector": "[data-testid='transaction-form-counterparty']",
        "value": "Клиент А"
      },
      {
        "action": "click",
        "selector": "[data-testid='transaction-form-submit']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": ".transactions-list"
      }
    ]
  },
