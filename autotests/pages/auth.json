[
  {
    "name": "Регистрация нового пользователя",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/register"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-name-input']",
        "value": "Тестовый Пользователь"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-business-input']",
        "value": "ООО Тестовая Компания"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-email-input']",
        "value": "test@example.com"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-password-input']",
        "value": "testpassword123"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-confirm-password-input']",
        "value": "testpassword123"
      },
      {
        "action": "click",
        "selector": "[data-testid='register-submit-btn']"
      },
      {
        "action": "waitForRequests",
        "timeout": 5000
      }
    ],
    "assertions": [
      {
        "type": "url",
        "expectedUrl": "{domain}/"
      }
    ]
  },
  {
    "name": "Выход из системы",
    "steps": [
      {
        "action": "click",
        "selector": "[data-testid='header-logout-btn']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      }
    ],
    "assertions": [
      {
        "type": "url",
        "expectedUrl": "{domain}/login"
      }
    ]
  },
  {
    "name": "Авторизация существующего пользователя",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/login"
      },
      {
        "action": "fill",
        "selector": "[data-testid='login-email-input']",
        "value": "test@example.com"
      },
      {
        "action": "fill",
        "selector": "[data-testid='login-password-input']",
        "value": "testpassword123"
      },
      {
        "action": "click",
        "selector": "[data-testid='login-submit-btn']"
      },
      {
        "action": "waitForRequests",
        "timeout": 5000
      }
    ],
    "assertions": [
      {
        "type": "url",
        "expectedUrl": "{domain}/"
      }
    ]
  }
]