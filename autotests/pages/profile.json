[
  {
    "name": "Переход на страницу профиля",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/register"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-email']",
        "value": "profiletest1@example.com"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-username']",
        "value": "profileuser1"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-password']",
        "value": "testpass123"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-password-confirm']",
        "value": "testpass123"
      },
      {
        "action": "click",
        "selector": "[data-testid='register-submit']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      },
      {
        "action": "click",
        "selector": "[data-testid='nav-profile']"
      },
      {
        "action": "wait",
        "delay": 1000
      },
      {
        "action": "navigate",
        "url": "{domain}/"
      },
      {
        "action": "wait",
        "delay": 500
      },
      {
        "action": "click",
        "selector": "[data-testid='logout-button']"
      },
      {
        "action": "waitForRequests",
        "timeout": 2000
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": "[data-testid='profile-page']"
      },
      {
        "type": "text",
        "selector": "[data-testid='profile-email']",
        "expectedText": "profiletest1@example.com"
      },
      {
        "type": "text",
        "selector": "[data-testid='profile-username']",
        "expectedText": "profileuser1"
      }
    ]
  },
