[
  {
    "name": "Добавление колонки на доску",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/register"
      },
      {
        "action": "fill",
        "selector": "[data-testid='username-input']",
        "value": "boarduser1"
      },
      {
        "action": "fill",
        "selector": "[data-testid='email-input']",
        "value": "boarduser1@test.com"
      },
      {
        "action": "fill",
        "selector": "[data-testid='password-input']",
        "value": "testpass123"
      },
      {
        "action": "fill",
        "selector": "[data-testid='password-confirm-input']",
        "value": "testpass123"
      },
      {
        "action": "click",
        "selector": "[data-testid='register-button']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      },
      {
        "action": "click",
        "selector": "[data-testid='create-board-button']"
      },
      {
        "action": "wait",
        "delay": 500
      },
      {
        "action": "fill",
        "selector": "[data-testid='board-title-input']",
        "value": "Тестовая доска"
      },
      {
        "action": "click",
        "selector": "[data-testid='submit-board-button']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      },
      {
        "action": "click",
        "selector": ".board-card"
      },
      {
        "action": "waitForRequests",
        "timeout": 2000
      },
      {
        "action": "click",
        "selector": "[data-testid='add-column-trigger']"
      },
      {
        "action": "wait",
        "delay": 500
      },
      {
        "action": "fill",
        "selector": "[data-testid='column-title-input']",
        "value": "Новая колонка"
      },
      {
        "action": "click",
        "selector": "[data-testid='column-submit-btn']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": "[data-testid='column-title']"
      },
      {
        "type": "text",
        "selector": "[data-testid='column-title']",
        "expectedText": "Новая колонка"
      }
    ]
  },
  {
    "name": "Добавление карточки в колонку",
    "steps": [
      {
        "action": "click",
        "selector": "[data-testid='add-card-trigger']"
      },
      {
        "action": "wait",
        "delay": 500
      },
      {
        "action": "fill",
        "selector": "[data-testid='card-title-input']",
        "value": "Тестовая карточка"
      },
      {
        "action": "fill",
        "selector": "[data-testid='card-description-input']",
        "value": "Описание тестовой карточки"
      },
      {
        "action": "click",
        "selector": "[data-testid='card-submit-btn']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      },
      {
        "action": "navigate",
        "url": "{domain}/"
      },
      {
        "action": "wait",
        "delay": 1000
      },
      {
        "action": "click",
        "selector": "[data-testid='logout-button']"
      },
      {
        "action": "waitForRequests",
        "timeout": 2000
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": ".card-title"
      }
    ]
  }
]
