        "value": "oldusername"
      },
      {
        "action": "fill",
        "selector": "[data-testid='password-input']",
        "value": "testpass123"
      },
      {
        "action": "fill",
        "selector": "[data-testid='confirm-password-input']",
        "value": "testpass123"
      },
      {
        "action": "click",
        "selector": "[data-testid='register-button']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      },
      {
        "action": "click",
        "selector": "[data-testid='nav-profile']"
      },
      {
        "action": "wait",
        "delay": 1000
      },
      {
        "action": "click",
        "selector": "[data-testid='edit-profile-btn']"
      },
      {
        "action": "wait",
        "delay": 500
      },
      {
        "action": "fill",
        "selector": "[data-testid='username-input']",
        "value": "newusername"
      },
      {
        "action": "click",
        "selector": "[data-testid='save-profile-btn']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      }
    ],
    "assertions": [
      {
        "type": "text",
        "selector": "[data-testid='profile-username']",
        "expectedText": "newusername"
      }
    ]
  },
