[
  {
    "name": "Регистрация и переход на страницу поиска",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/register"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-email']",
        "value": "searchtestuser@test.com"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-password']",
        "value": "password123"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-first-name']",
        "value": "SearchTest"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-last-name']",
        "value": "User"
      },
      {
        "action": "click",
        "selector": "[data-testid='register-submit']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      },
      {
        "action": "navigate",
        "url": "{domain}/search"
      }
    ],
    "assertions": [
      {
        "type": "url",
        "expectedUrl": "{domain}/search"
      },
      {
        "type": "visibility",
        "selector": "[data-testid='search-input']"
      }
    ]
  },
