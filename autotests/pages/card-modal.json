[
  {
    "name": "Открытие модального окна карточки",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/login"
      },
      {
        "action": "fill",
        "selector": "[data-testid='login-email']",
        "value": "test@example.com"
      },
      {
        "action": "fill",
        "selector": "[data-testid='login-password']",
        "value": "password123"
      },
      {
        "action": "click",
        "selector": "[data-testid='login-submit']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      },
      {
        "action": "click",
        "selector": "[data-testid^='board-card-']"
      },
      {
        "action": "waitForRequests",
        "timeout": 2000
      },
      {
        "action": "click",
        "selector": "[data-testid^='card-']"
      },
      {
        "action": "wait",
        "delay": 500
      }
    ],
    "assertions": [
      {
        "type": "visibility",
        "selector": "[data-testid='card-modal']"
      },
      {
        "type": "visibility",
        "selector": "[data-testid='card-title']"
      }
    ]
  },
