[
  {
    "name": "Просмотр своего профиля",
    "steps": [
      {
        "action": "navigate",
        "url": "{domain}/register"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-firstname-input']",
        "value": "Иван"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-lastname-input']",
        "value": "Иванов"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-email-input']",
        "value": "profile_test@test.com"
      },
      {
        "action": "fill",
        "selector": "[data-testid='register-password-input']",
        "value": "password123"
      },
      {
        "action": "click",
        "selector": "[data-testid='register-submit-button']"
      },
      {
        "action": "waitForRequests",
        "timeout": 3000
      },
      {
        "action": "navigate",
        "url": "{domain}/profile"
      }
    ],
    "assertions": [
      {
        "type": "url",
        "expectedUrl": "{domain}/profile"
      },
      {
        "type": "visibility",
